<div class="title-bar ten columns">
  <div class="alignleft"><strong> current_user.username </strong></div>
  <div class="alignright"><strong> Update your profile </strong></div>
  <div class="clear"></div>
</div>

<div class="message-box ten columns">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "off", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, autocomplete: "off" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class=row>
      <div class="favorite-dice-box">
        <%= f.collection_radio_buttons(:favorite_dice,  @dice_sets, :id, :d6_url) do |b| %>
            <%= b.label { image_tag("#{b.text}") + b.radio_button } %>
        <% end %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>

  <h3>Saved Rolls</h3>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% current_user.saved_rolls .each do |roll| %>
        <tr>
          <td><%= roll.name %></td>
          <td><%= link_to 'Edit', edit_user_saved_roll_path(user_id: current_user.id, id: roll.id) %></td>
          <td><%= link_to "Destroy", user_saved_rolls_path(roll), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if current_user.saved_rolls.count < 4 %>
    <%= link_to "New Saved Roll", new_user_saved_roll_path(current_user) %>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>
