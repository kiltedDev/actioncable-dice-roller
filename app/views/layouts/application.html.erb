<!DOCTYPE html>
<html>
  <head>
    <title>Roll For Init</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <ul class="navbar">
      <% if user_signed_in? %>
        <%= yield :right_nav %>

        <li>
          <a href="#"><%= current_user.username %></a>
          <%= link_to "Settings", edit_user_registration_path %>
          <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
          <%= link_to "Home", tables_path %>
          <%= link_to "Users", users_path %>
        </li>
      <% else %>
        <li><%= link_to "Log In", new_user_session_path %></li>
      <% end %>
    </ul>
    <div>
      <div class="row">
        <div class="sidebar-left two columns">
          <% if user_signed_in? %>
            <h5>Tables</h5>
            <ul>
              <% current_user.tables .each do |table| %>
              <li><%= link_to table.name, table, data: { behavior: "table-link", table_id: table.id } %></li>
              <% end %>
            </ul>
          <% end %>
        </div>

        <div class="view-port ten columns">
          <% if flash.any? %>
          <div class="flash">
            <div>
              <% flash.each do |name, msg| %>
              <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
              <% end %>
            </div>
          </div>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
