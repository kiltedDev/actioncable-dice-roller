<p id="notice"><%= notice %></p>

<h1>Tables</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tables.each do |table| %>
      <tr>
        <td><%= table.name %></td>
        <td><%= link_to 'Show', table %></td>
        <td><%= link_to 'Edit', edit_table_path(table) %></td>
        <td><%= link_to 'Destroy', table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to "Join", table_table_users_path(table), method: :post %></td>
        <td><%= link_to "Leave", table_table_users_path(table), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

